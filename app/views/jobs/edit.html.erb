<h1>edit hunt</h1>

<%= form_for :job, url: job_path(@job), method: :patch do |f|%>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :amount %>
    <%= f.number_field :amount%>
    
    <%= f.submit %>
<% end %>