
<!-- View for individual job pages -->

<h1><%= @job.title %></h1>

<p>
    <%= @job.description%>
    <%= @job.amount%>
</p>

<p> Hunt created by: <%= @job.user.first_name %></p>

<% if current_user.has_role? :slayer %>
    <%= link_to "Accept Hunt", edit_job_path(@job) %>
<% else current_user %>
    <%= link_to "Edit", edit_job_path(@job) %>
    <%= link_to "Delete", job_path(@job),  
        method: :delete,
        data: {confirm: "Are you sure you want to remove the hunt?"} %>
<% end %>