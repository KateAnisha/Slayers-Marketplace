<!DOCTYPE html>
<html>
  <head>
    <title>Slayerz - Find and hire demons to help you with a problem.</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <!-- Main navigation -->
  <nav>
  <h1>Slayerz</h1>
    <%# <div class="logo"></div> %>
    <%= link_to "Home", home_path %>
    <% if user_signed_in? %>
      <% if !current_user.has_role? :slayer%>
        <%= link_to "Create Hunt", new_job_path %>
      <% end %>
    <%= link_to "View Hunts", jobs_path %>
    <% end %>
    <%= link_to "Slayerz", slayerz_index_path %>
    
    <% if user_signed_in? %>
      <%= current_user.first_name %>
      <%= link_to "Account", edit_user_registration_path %>
      <%= link_to "Messages", conversations_path%>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %> 
      <%= link_to "Sign up", new_user_registration_path %>
      <%= link_to "Sign in", new_user_session_path %>
    <% end%>
    

  </nav>

  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>

  <% if flash[:errors] %>
    <section class="errors">
      <p class="title">The following errors occured:</p>
      <ul>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    </section>
  <% end %>

  <body>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
