<h1>Slayers and demons</h1>

<% @jobs.each do |job| %>
    <h2><%= job.title%></h2>
    <h2><%= job.description%></h2>
    <h2><%= job.amount%></h2>
    <%= link_to 'View more', job_path(job)%>
<% end %> 

<% @users.each do |user| %>
    <p>
    <%= user.first_name%>
    <% user.slayer_info %>
    <%= link_to 'View more', slayerz_path(user.slayer_info) %>
    </p>
<% end %>

