<H1>Slayer profile</H1>

<%= form_for :slayer_info, url: slayerz_index_path do |f| %>
    <%= f.label :weapon %>
    <%= f.text_field :weapon%>

    <%= f.label :biography %>
    <%= f.text_area :biography%>

    <%= f.label :profile_image %>
    <%= f.file_field :profile_image %>
    
    <%= f.submit %>
<% end %>